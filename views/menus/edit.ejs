<%- include ../partials/header.ejs %>

<section class="jumbotron">
    <div class="container">
        <h1>Menu</h1>
        <form method="post" action="<%= menu._id %>">
            <fieldset class="form-group">
                <label for="item" class="col-sm-2">Edit Item:</label>
                <input name="item" id="item" required value="<%= menu.item %>" />
            </fieldset>
            <fieldset class="form-group">
                <label for="description" class="col-sm-2">Edit Description:</label>
                <textarea name="description" id="description" required><%= menu.description %>
                </textarea>
            </fieldset>
            <div>
                <%= menu.created %>
            </div>
            <button class="btn btn-primary col-sm-offset-2">Save</button>
            <a href="/menus/delete/<%= menu._id %>" title="Delete" class="confirmation">
                <button class="btn btn-danger col-sm-offset-2" type="button">Delete</button>
            </a>
        </form>
    </div>
</section>

<%- include ../partials/footer.ejs %>